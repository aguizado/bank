package com.example.bank;

import java.util.ArrayList;
import java.util.Arrays;

import org.springframework.boot.autoconfigure.SpringBootApplication;

import io.reactivex.rxjava3.core.Observable;

/**.
* Class BankApplication

* @author Andres Guizado
* @version 0.1, 2023/10/16
*/
@SpringBootApplication
public class BankApplication {

	public static void main(String[] args) {
//		SpringApplication.run(BankApplication.class, args);

		        //1. Observable
		        Observable<String> obsString = Observable.just("María", "José");

		        //2. Suscripción
		        obsString
		        .filter(x -> x.contains("s"))
		        .subscribe(
		            elemento -> System.out.println("onNext: " + elemento),
		            error -> System.out.println("onError: " + error.getMessage()),
		            () -> System.out.println("onComplete")
		        );
		        
		        Observable<String> obsEx1 = Observable.fromIterable(Arrays.asList("Maria","Aron","Jose","Andrea"));
		        obsEx1.filter(n -> n.contains("A")).map(String::toUpperCase).subscribe(System.out::println);
		        

		
		
	}
	
}
